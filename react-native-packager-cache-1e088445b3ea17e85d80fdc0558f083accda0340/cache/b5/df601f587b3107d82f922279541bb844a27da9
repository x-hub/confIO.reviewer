
'use strict';

var path = require('path');

function findXcodeProject(files) {
  var sortedFiles = files.sort();
  for (var i = sortedFiles.length - 1; i >= 0; i--) {
    var fileName = files[i];
    var ext = path.extname(fileName);

    if (ext === '.xcworkspace') {
      return {
        name: fileName,
        isWorkspace: true
      };
    }
    if (ext === '.xcodeproj') {
      return {
        name: fileName,
        isWorkspace: false
      };
    }
  }

  return null;
}

module.exports = findXcodeProject;