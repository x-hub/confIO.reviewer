

var child_process = require('child_process');

function parseDevicesResult(result) {
  if (!result) {
    return [];
  }

  var devices = [];
  var lines = result.trim().split(/\r?\n/);

  for (var i = 0; i < lines.length; i++) {
    var words = lines[i].split(/[ ,\t]+/).filter(function (w) {
      return w !== '';
    });

    if (words[1] === 'device') {
      devices.push(words[0]);
    }
  }
  return devices;
}

function getDevices() {
  try {
    var devicesResult = child_process.execSync('adb devices');
    return parseDevicesResult(devicesResult.toString());
  } catch (e) {
    return [];
  }
}

module.exports = {
  parseDevicesResult: parseDevicesResult,
  getDevices: getDevices
};