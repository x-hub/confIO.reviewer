var plistParser = require('plist');
var getPlistPath = require('./getPlistPath');
var fs = require('fs');

module.exports = function getPlist(project, sourceDir) {
  var plistPath = getPlistPath(project, sourceDir);

  if (!plistPath || !fs.existsSync(plistPath)) {
    return null;
  }

  return plistParser.parse(fs.readFileSync(plistPath, 'utf-8'));
};