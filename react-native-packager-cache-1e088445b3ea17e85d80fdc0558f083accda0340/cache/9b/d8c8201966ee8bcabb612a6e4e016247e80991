var toCamelCase = require('lodash').camelCase;

module.exports = function makeStringsPatch(params, prefix) {
  var values = Object.keys(params).map(function (param) {
    var name = toCamelCase(prefix) + '_' + param;
    return '    ' + ('<string moduleConfig="true" name="' + name + '">' + params[param] + '</string>');
  });

  var patch = values.length > 0 ? values.join('\n') + '\n' : '';

  return {
    pattern: '<resources>\n',
    patch: patch
  };
};