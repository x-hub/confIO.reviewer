var fs = require('fs-extra');
var path = require('path');
var groupFilesByType = require('../groupFilesByType');

module.exports = function unlinkAssetsAndroid(files, targetPath) {
  var grouped = groupFilesByType(files);

  grouped.font.forEach(function (file) {
    var filename = path.basename(file);
    if (fs.existsSync(filename)) {
      fs.unlinkSync(path.join(targetPath, 'fonts', filename));
    }
  });
};