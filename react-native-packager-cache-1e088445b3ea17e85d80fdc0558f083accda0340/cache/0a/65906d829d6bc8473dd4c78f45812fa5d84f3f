var fs = require('fs-extra');
var path = require('path');
var groupFilesByType = require('../groupFilesByType');

module.exports = function copyAssetsAndroid(files, targetPath) {
  var assets = groupFilesByType(files);

  (assets.font || []).forEach(function (asset) {
    return fs.copySync(asset, path.join(targetPath, 'fonts', path.basename(asset)));
  });
};