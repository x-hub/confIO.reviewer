
'use strict';

var fs = require('fs');
var glob = require('glob');
var path = require('path');

module.exports = function getNamespace(folder) {
  var files = glob.sync('**/*.cs', { cwd: folder });

  var packages = files.map(function (filePath) {
    return fs.readFileSync(path.join(folder, filePath), 'utf8');
  }).map(function (file) {
    return file.match(/namespace (.*)[\s\S]+IReactPackage/);
  }).filter(function (match) {
    return match;
  });

  return packages.length ? packages[0][1] : null;
};